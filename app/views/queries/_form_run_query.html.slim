= form_for :query, url: ontology_queries_run_path(@ontology), html: { role: 'form' } do |f|

  .form-group
    = f.label :content, 'Run a query on this ontology'
    = f.text_area :content, class: 'form-control monospace', spellcheck: false, rows: '5', value: (@query.nil? ? default_query_content : @query.content)

  .form-inline
    .form-group
      label for="output" Output type
      select.form-control style="margin-left:1em" name="query[output]"
        = options_for_select([['HTML Table', 1], ['XML', 2], ['JSON', 3], ['Plain Text', 4]])


    button.btn.btn-ar.btn-primary style="margin-left:1em" type="submit" Run Query
    - if defined?(savebutton) and savebutton
      button.btn.btn-ar.btn-info#query_start_save style="margin-left:1em" type="button" Save Query
